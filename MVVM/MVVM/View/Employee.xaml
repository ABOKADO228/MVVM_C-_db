<Page x:Class="MVVM.View.Employee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MVVM.View"
      xmlns:vm="clr-namespace:MVVM.ViewModels.PageViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Employee">
    <Page.DataContext>
        <vm:EmployeeViewModelPage/>
    </Page.DataContext>
    <Grid>
        <DataGrid Grid.Column="0" Grid.ColumnSpan="1" ItemsSource="{Binding Employees}" Width="150" Height="150"></DataGrid>
    </Grid>
</Page>
